channels:
  - conda-forge
  - nodefaults
        # This is the default Miniforge behaviour.
        # See also https://docs.conda.io/projects/conda/en/latest/user-guide/tasks/manage-environments.html#creating-an-environment-file-manually

channel_priority: strict
    # Stop searching for a package if found in the first listed channel. Should speed up
    # conda operations. https://docs.conda.io/projects/conda/en/latest/user-guide/tasks/manage-channels.html#strict-channel-priority
